<h2>My Brews</h2>

<table class="table">
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Created</th>
  </tr>
  {{#each}}
  <tr class='brew'>
    <td>{{link-to id 'recipe' this}}</td>
    <td>{{link-to name 'recipe' this}}</td>
    <td>{{formatted-date createdAt}}</td>
  </tr>
  {{/each}}
</table>
