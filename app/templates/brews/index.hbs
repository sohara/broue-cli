<h2>My Brews</h2>

<table class="table">
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Created</th>
  </tr>
  {{#each brews as |brew|}}
    <tr class='brew'>
      <td>{{link-to brew.id 'recipe' brew}}</td>
      <td>{{link-to brew.name 'recipe' brew}}</td>
      <td>{{formatted-date brew.createdAt}}</td>
    </tr>
  {{/each}}
</table>
