<StatboxGroup>
  <StatboxItem
    @property={{model.originalGravity}}
    @unitOfMesure="S.G."
    @propertyDescription="Original Gravity"
    @colorClass="purple"
    class="mr-4"
  />

  <StatboxItem
    @property={{strikeWaterVolume}}
    @unitOfMesure={{unitOfMesure}}
    @faIcon="fa-bitbucket"
    @propertyDescription="Strike Water Volume"
    @colorClass="blue"
    class="mr-4"
  />

  <StatboxItem
    @property={{strikeWaterTemp}}
    @unitOfMesure={{tempUnit}}
    @faIcon="fa-fire"
    @propertyDescription="Strike Water Temperature"
    @colorClass="red"
  />

</StatboxGroup>
{{outlet}}
