<form role="form" class="form-horizontal">
  {{convertible-text-field object=this convertibleProperty='batchSize' type="volume" measureSystem=measureSystem}}

  {{convertible-text-field object=this convertibleProperty='boilLoss' type="volume" measureSystem=measureSystem}}

  {{bs-text-field valueProperty=efficiency appendText="%"}}

  {{convertible-text-field object=this convertibleProperty='targetMashTemp' type="temp" measureSystem=measureSystem}}

  {{bs-text-field valueProperty=waterGrainRatioMetric appendText="litres/kg"}}

  {{convertible-text-field object=this convertibleProperty='waterGrainRatio' type="ratio" measureSystem=measureSystem}}

  {{convertible-text-field object=this convertibleProperty='grainTemp' type="temp" measureSystem=measureSystem}}

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary" type="submit" {{action 'save' this}}>Save</button>
      <button class="btn btn-default" type="submit" {{action 'cancel' this}}>Cancel</button>
    </div>
  </div>
</form>
