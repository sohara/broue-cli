<div class="panel panel-primary">
  <div class="panel-heading">
    {{#if canEdit}}
      {{#linkTo 'specs.edit' class="btn btn-default btn-xs pull-right edit-specs"}}<i class="glyphicon glyphicon-edit"></i> Edit{{/linkTo}}
    {{/if}}
    <h2 class="panel-title">Specs</h2>
  </div>
  <table class="table table-striped">
    <tbody>
    <tr>
      <td>Batch Size</td>
      <td>{{batchSize}} litres</td>
    </tr>
    <tr>
      <td>Boil Loss</td>
      <td>{{boilLoss}} litres</td>
    </tr>
    <tr>
      <td>Efficiency</td>
      <td>{{efficiency}} %</td>
    </tr>
    <tr>
      <td>Target Mash Temperature</td>
      <td>{{targetMashTemp}} °C</td>
    </tr>
    <tr>
      <td>Water/Grain Ratio</td>
      <td>{{waterGrainRatio}} litres/Kg</td>
    </tr>
    <tr>
      <td>Grain Temperature</td>
      <td>{{grainTemp}} °C</td>
    </tr>
    </tbody>
  </table>
</div>
