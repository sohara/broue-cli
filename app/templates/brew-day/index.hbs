{{#linkTo 'brew_day.edit' class="btn btn-default pull-right edit-specs"}}<i class="glyphicon glyphicon-pencil"></i> Edit{{/linkTo}}
<br><br>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">Brew Day</h2>
  </div>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>Brew Date</td>
        <td>{{#if brewDate}}{{brewDate}}{{else}}<span class="text-muted">—</span>{{/if}}</td>
      </tr>
      <tr>
        <td>Recorded Original Gravity</td>
        <td>{{#if recordedOriginalGravity}}{{recordedOriginalGravity}}{{else}}<span class="text-muted">—</span>{{/if}}</td>
      </tr>
      <tr>
        <td>Recorded Post-Boil Volume</td>
        <td>{{#if recordedPostBoilVolume}}{{recordedPostBoilVolume}} litres{{else}}<span class="text-muted">—</span>{{/if}}</td>
      </tr>
      <tr>
        <td>Recorded Final Gravity</td>
        <td>{{#if recordedFinalGravity}}{{recordedFinalGravity}} litres{{else}}<span class="text-muted">—</span>{{/if}}</td>
      </tr>
    </tbody>
  </table>
</div>
