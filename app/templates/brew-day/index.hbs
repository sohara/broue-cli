
<div class="panel panel-primary">
  <div class="panel-heading">
    {{#if canEdit}}
      {{#link-to 'brew_day.edit' class="btn btn-default btn-xs pull-right edit-specs"}}<i class="glyphicon glyphicon-edit"></i> Edit{{/link-to}}
    {{/if}}
    <h2 class="panel-title">Brew Day</h2>
  </div>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>Brew Date</td>
        <td>{{#if brewDate}}{{brewDate}}{{else}}<span class="text-muted">—</span>{{/if}}</td>
      </tr>
      <tr>
        <td>Recorded Original Gravity</td>
        <td>{{#if recordedOriginalGravity}}{{recordedOriginalGravity}}{{else}}<span class="text-muted">—</span>{{/if}}</td>
      </tr>
      <tr>
        <td>Recorded Post-Boil Volume</td>
        <td>{{#if recordedPostBoilVolumePresent}}
          {{localized-volume model=this measureSystem=measureSystem property="recordedPostBoilVolume"}}
          {{else}}
            <span class="text-muted">—</span>{{/if}}
          </td>
      </tr>
      <tr>
        <td>Recorded Final Gravity</td>
        <td>{{#if recordedFinalGravity}}{{recordedFinalGravity}} litres{{else}}<span class="text-muted">—</span>{{/if}}</td>
      </tr>
    </tbody>
  </table>
</div>
