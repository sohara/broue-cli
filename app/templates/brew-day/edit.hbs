<Form @model={{this}} as |F|>
  <F.TextField
    @model={{this.model}}
    @field="brewDate"
  />
  <F.TextField
    @model={{model}}
    @field="recordedOriginalGravity"
    @appendText="S.G."
  />
  <F.ConvertibleTextField
    @field="recordedPostBoilVolume"
    @type="volume"
  />
  <F.TextField
    @model={{model}}
    @field="recordedFinalGravity"
    @appendText="S.G."
  />
  <F.Submit
    @action={{action "sendSave" model}}
    class="mr-6"
    disabled={{isProcessing}}
  >
    Save
  </F.Submit>
  <F.Cancel
    @action={{action "sendCancel" model}}
  >
    Cancel
  </F.Cancel>
</Form>
