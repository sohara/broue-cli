<div class="container" style="margin-top:30px">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title"><strong>Sign up for an account</strong></h3></div>
      <div class="panel-body">
        <form role="form" oninput={{action "resetErrorMessage"}}>
          <div class="form-group">
            <label for="email"> Email</label>
            {{input type="email" value=email class="form-control" style="border-radius:0px" id="email" placeholder="Enter email"}}
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            {{input type="password" value=password class="form-control" style="border-radius:0px" id="password" placeholder="Password"}}
          </div>

          <div class="form-group">
            <label for="passwordConfirmation">Password Confirmation</label>
            {{input type="password" value=passwordConfirmation class="form-control" style="border-radius:0px" id="passwordConfirmation" placeholder="Password Confirmation"}}
          </div>

          <div class="form-group">
            <label for="username">Username</label>
            {{input value=username class="form-control" style="border-radius:0px" id="username" placeholder="Enter username"}}
          </div>

          {{#if errorMessage}}
          <p class="alert alert-danger">{{errorMessage}}</p>
          {{/if}}

          <button {{action "signUp"}} disabled={{isProcessing}} type="submit" class="btn btn-sm btn-default">Sign Up</button>
        </form>
      </div>
    </div>
  </div>
</div>
