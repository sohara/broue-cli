<br><br>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">{{#if isNew}}Add{{else}}Edit{{/if}} Note</h2>
  </div>
  <div class="panel-body">
    <div class="col-md-6">
      <form role="form" class="form-horizontal">
        {{bs-textarea-field valueProperty=model.text label=false rows="20"
        inputDivClass="col-mod-12"}}
        <button class="btn btn-primary" type="submit" {{action 'save' model}}>Save</button>
        <button class="btn btn-default" type="submit" {{action 'cancel'}}>Cancel</button>
      </form>
    </div>
    <div class="col-md-6">
      {{#if model.text}}
        <div class="well recede-background">
          {{simple-format model.text}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
