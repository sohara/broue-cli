<br><br>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">{{#if isNew}}Add{{else}}Edit{{/if}} Note</h2>
  </div>
  <div class="panel-body">
    <div class="col-md-6">
      <form role="form" class="form-horizontal">
        {{bs-textarea-field valueProperty=text label=false rows="20"
        inputDivClass="col-mod-12"}}
        <button class="btn btn-primary" type="submit" {{action 'save' this}}>Save</button>
        <button class="btn btn-default" type="submit" {{action 'cancel' this}}>Cancel</button>
      </form>
    </div>
    <div class="col-md-6">
      {{#if text}}
      <div class="well recede-background">
        {{simple-format text}}
      </div>
      {{/if}}
    </div>
  </div>
</div>
