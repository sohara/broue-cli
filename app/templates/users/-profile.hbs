<div class="row">

  <div class="col-md-4">
    <div class="well recede-background">
      <h1>
        {{model.username}}
      </h1>
      {{#if model.image}}
        <img src={{model.image}} alt={{model.username}}>
      {{/if}}
      {{#if model.bio}}
        <blockquote>
          <p>{{model.bio}}</p>
        </blockquote>
      {{/if}}

      {{#if this.isCurrentUser}}
        <p>Email: {{model.email}}</p>

        {{#link-to "profile.edit" class="btn btn-primary"}}
          <i class="glyphicon glyphicon-edit"></i> Edit Profile
        {{/link-to}}
      {{/if}}
    </div>
  </div>

  <div class="col-md-8">
    <h2>{{model.username}}'s Recent Brews</h2>
    <ul class="brews-list list-unstyled">
      {{#each this.recentBrews as |brew|}}
        {{partial "brew/brew-card"}}
      {{/each}}
    </ul>
  </div>
</div>
