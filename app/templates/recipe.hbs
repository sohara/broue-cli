<StatboxGroup>
  <StatboxItem
    @property={{model.originalGravity}}
    @unitOfMesure="S.G."
    @propertyDescription="Original Gravity"
    @colorClass="blue"
    class="mr-4"
  />
  <StatboxItem
    @property={{model.preBoilGravity}}
    @unitOfMesure="S.G."
    @propertyDescription="Preboil Gravity"
    @colorClass="purple"
    class="mr-4"
  />
  <StatboxItem
    @property={{model.colorSRM}}
    @unitOfMesure="SRM"
    @faIcon="fa-tint"
    @propertyDescription="Color"
    @colorClass="yellow"
    class="mr-4"
  />
  <StatboxItem
    @property={{model.totalIBUs}}
    @unitOfMesure="IBU"
    @faIcon="fa-leaf"
    @propertyDescription="Bitterness"
    @colorClass="green"
  />
</StatboxGroup>

<FermentableAdditions
  @brew={{model}}
  @canEdit={{canEdit}}
  @measureSystem={{measureSystem}}
  @remove={{action "destroyRecord"}}
/>
<HopAdditions
  @brew={{model}}
  @canEdit={{canEdit}}
  @measureSystem={{measureSystem}}
  @remove={{action "destroyRecord"}}
/>
<YeastAdditions
  @additions={{model.yeastAdditions}}
  @canEdit={{canEdit}}
  @remove={{action "destroyRecord"}}
/>
