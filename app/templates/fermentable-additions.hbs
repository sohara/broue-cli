<br><br>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">Fermentable Additions</h2>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Color</th>
        <th>% Extract</th>
        <th>Weight</th>
        <th> </th>
      </tr>
    </thead>
    {{#each}}
    <tbody>
    <tr>
      <td>{{name}}</td>
      <td>{{color}}</td>
      <td>{{percentExtract}}</td>
      <td>{{grams-to-kilos weight}} kg</td>
      <td>{{link-to 'Edit' 'fermentables.edit' this}}</td>
    </tr>
    </tbody>
    {{/each}}
    <tfoot>
      <tr>
        <td colspan="3">Total</td>
        <td colspan="2">{{grams-to-kilos totalWeight}} kg</td>
      </tr>
    </tfoot>
  </table>
</div>
