<br><br>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">Fermentable Additions</h2>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Color</th>
        <th>% Extract</th>
        <th colspan="3">Weight</th>
      </tr>
    </thead>
    {{#each}}
    <tbody>
    <tr>
      <td>{{name}}</td>
      <td>{{color}}</td>
      <td>{{percentExtract}}</td>
      <td>{{grams-to-kilos weight}} kg</td>
      <td>
        {{#link-to 'fermentables.edit' this class='btn btn-default btn-xs' title='Edit' data-toggle="tooltip"}}
            <span class="glyphicon glyphicon-edit"></span>
          {{/link-to}}
      </td>
      <td>
        <button {{action 'destroyRecord' this}} class="btn btn-default btn-xs" title="Delete">
          <span class="glyphicon glyphicon-trash"></span>
        </button>
      </td>
    </tr>
    </tbody>
    {{/each}}
    <tfoot>
      <tr>
        <td colspan="3">Total</td>
        <td colspan="3">{{grams-to-kilos totalWeight}} kg</td>
      </tr>
    </tfoot>
  </table>
</div>
