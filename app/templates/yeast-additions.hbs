<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">Yeast Additions</h2>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Supplier</th>
        <th>Form</th>
        <th colspan="3">Amount</th>
      </tr>
    </thead>
    <tbody>
      {{#each}}
      <tr>
        <td>{{productId}}</td>
        <td>{{name}}</td>
        <td>{{supplier}}</td>
        <td>{{form}}</td>
        <td>{{amount}} {{unit}}</td>
        <td>
          {{#link-to 'yeasts.edit' this class='btn btn-default btn-xs' title='Edit' data-toggle="tooltip"}}
              <span class="glyphicon glyphicon-edit"></span>
            {{/link-to}}
        </td>
        <td>
          <button {{action 'destroyRecord' this}} class="btn btn-default btn-xs" title="Delete">
            <span class="glyphicon glyphicon-trash"></span>
          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr><td colspan="7"></td></tr>
    </tfoot>
  </table>
</div>
