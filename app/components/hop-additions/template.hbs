<div class="panel panel-primary">
  <div class="panel-heading">
    {{#if canEdit}}
      {{#link-to 'hops.new' class="btn btn-default btn-xs pull-right" title="New"}}
        <span class="glyphicon glyphicon-plus-sign"></span>
        Add Hop
      {{/link-to}}
    {{/if}}
    <h2 class="panel-title">Hop Additions</h2>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Variety</th>
        <th>Form</th>
        <th>Use</th>
        <th>Weight</th>
        <th>Boil Time</th>
        <th>AA %</th>
        <th colspan={{computedColspan}}>IBUs</th>
      </tr>
    </thead>
    <tbody>
      {{#each brew.decoratedHopAdditions as |addition|}}
        <tr>
          <td>{{addition.name}}</td>
          <td>{{addition.form}}</td>
          <td>{{addition.use}}</td>
          <td>{{localized-weight model=addition measureSystem=measureSystem}}</td>
          <td>{{addition.boilTime}}</td>
          <td>{{addition.alphaAcids}}</td>
          <td>{{addition.ibus}}</td>
          {{#if canEdit}}
          <td>
            {{#link-to 'hops.edit' addition.content class='btn btn-default btn-xs' title='Edit' data-toggle="tooltip"}}
                <span class="glyphicon glyphicon-edit"></span>
              {{/link-to}}
          </td>
          <td>
            <button {{action 'remove' addition.content}} class="btn btn-default btn-xs" title="Delete">
              <span class="glyphicon glyphicon-trash"></span>
            </button>
          </td>
        {{/if}}
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3">Total</td>
        <td>{{localized-weight model=this measureSystem=measureSystem}}</td>
        <td colspan="2"> </td>
        <td colspan={{computedColspan}}>{{brew.totalIBUs}}</td>
      </tr>
    </tfoot>
  </table>
</div>
