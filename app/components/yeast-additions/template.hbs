{{#if @canEdit}}
  {{#link-to
    "yeasts.new"
    class="btn-primary btn-small float-right"
    title="New"
  }}
    <span class="glyphicon glyphicon-plus-sign"></span>
    Add Yeast
  {{/link-to}}
{{/if}}
<h2 class="border-b font-normal mb-6">Yeast Additions</h2>
<Table as |T|>
  <T.Head>
    <T.Row>
      <T.Header>Product ID</T.Header>
      <T.Header>Name</T.Header>
      <T.Header>Supplier</T.Header>
      <T.Header>Form</T.Header>
      <T.Header>Amount</T.Header>
      {{#if @canEdit}}
        <T.Header colspan="2"></T.Header>
      {{/if}}
    </T.Row>
  </T.Head>
  <T.Body>
    {{#each additions as |addition|}}
      <T.Row>
        <T.Cell>{{addition.productId}}</T.Cell>
        <T.Cell>{{addition.name}}</T.Cell>
        <T.Cell>{{addition.supplier}}</T.Cell>
        <T.Cell>{{addition.form}}</T.Cell>
        <T.Cell>{{addition.amount}} {{addition.unit}}</T.Cell>
        {{#if this.canEdit}}
          <T.Cell>
            {{#link-to
              "yeasts.edit"
              addition
              class="btn-primary btn-small"
              title="Edit"
              data-toggle="tooltip"
            }}
              <span class="glyphicon glyphicon-edit"></span>Edit
            {{/link-to}}
          </T.Cell>
          <T.Cell>
            <button
              class="btn-secondary btn-small"
              title="Delete"
              {{action remove addition}}
            >
              <span class="glyphicon glyphicon-trash"></span>Delete
            </button>
          </T.Cell>
        {{/if}}
      </T.Row>
    {{/each}}
  </T.Body>
</Table>
